@page
@model WebApplication1.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/dashboard.css">
</head>
<body>
    <div class="dashboard-wrapper">
        <div class="welcome-card">
            <div class="card-glow"></div>
            <header class="card-header">
                <p class="eyebrow">Control Center</p>
                <h1>Welcome back, @Model.Username 👋</h1>
                <p class="subtitle">Your account is active and everything is running smoothly.</p>
            </header>

            <section class="quick-stats" aria-label="Quick dashboard stats">
                <article class="stat-item">
                    <span class="stat-label">Account status</span>
                    <span class="stat-value positive">Online</span>
                </article>
                <article class="stat-item">
                    <span class="stat-label">Role</span>
                    <span class="stat-value">@Model.Role</span>
                </article>
                <article class="stat-item">
                    <span class="stat-label">Security</span>
                    <span class="stat-value">Protected</span>
                </article>
            </section>

            <div class="user-info">
                <div class="info-row">
                    <span class="label">Username</span>
                    <span class="value">@Model.Username</span>
                </div>
                <div class="info-row">
                    <span class="label">Email</span>
                    <span class="value">@Model.Email</span>
                </div>
                <div class="info-row">
                    <span class="label">Role</span>
                    <span class="value badge">@Model.Role</span>
                </div>
            </div>

            <form method="post" asp-page-handler="Logout" class="action-row">
                <button type="submit" class="btn-logout">Logout</button>
            </form>
        </div>
    </div>
</body>
</html>
