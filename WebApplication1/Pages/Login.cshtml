@page
@model WebApplication1.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <!-- Fixed: Proper conditional class syntax -->
    <div class="container @(ViewData["ShowRegisterPanel"] != null ? "right-panel-active" : "")" id="container">

        <!-- Registration Form -->
        <div class="form-container sign-up-container">
            <form method="post" asp-page-handler="Register">
                <h1>Create Account</h1>

                @if (ViewData["RegisterSuccess"] != null)
                {
                    <div class="text-success" style="background-color: #d4edda; color: #155724; padding: 15px; margin: 15px 0; border-radius: 10px; text-align: center;">
                        <strong>✓ Success!</strong><br />
                        @ViewData["RegisterSuccess"]<br />
                        <small>Click "Sign In" below to login</small>
                    </div>
                }

                <input type="text" name="FullName" placeholder="Full Name" required />
                <input type="email" name="Email" placeholder="Email" required />
                <input type="password" name="Password" placeholder="Password" required />
                <button type="submit">Sign Up</button>

                @if (ViewData["RegisterError"] != null)
                {
                    <div class="text-danger">@ViewData["RegisterError"]</div>
                }
            </form>
        </div>

        <!-- Login Form -->
        <div class="form-container sign-in-container">
            <form method="post" asp-page-handler="Login">
                <h1>Sign In</h1>
                <input type="email" name="Email" placeholder="Email" required />
                <input type="password" name="Password" placeholder="Password" required />
                <a href="/ForgotPassword" class="forgot-password">Forgot your password?</a>
                <button type="submit">Sign In</button>
                @if (ViewData["LoginError"] != null)
                {
                    <div class="text-danger">@ViewData["LoginError"]</div>
                }
            </form>
        </div>

        <!-- Overlay -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button type="button" class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button type="button" class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js"></script>
</body>
</html>
